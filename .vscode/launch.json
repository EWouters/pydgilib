  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: debug.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/tests/debug.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: tests_plot/debug.py",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/tests_plot/debug.py",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File (Integrated Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Remote Attach",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost",
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "."
        }
      ]
    },
    {
      "name": "Python: DGILibExtra",
      "type": "python",
      "request": "launch",
      "module": "pydgilib_extra",
      "console": "integratedTerminal"
    }
  ]
}
